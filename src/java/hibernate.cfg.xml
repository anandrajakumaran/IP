<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3307/shoppingcart?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="show_sql">true</property>
    <property name="hibernate.connection.password">andyh123</property>
    <mapping resource="hibernate/ProductOrder.hbm.xml"/>
    <mapping resource="hibernate/Category.hbm.xml"/>
    <mapping resource="hibernate/Product.hbm.xml"/>
    <mapping resource="hibernate/CustomerOrder.hbm.xml"/>
    <mapping resource="hibernate/Customer.hbm.xml"/>
  </session-factory>
</hibernate-configuration>